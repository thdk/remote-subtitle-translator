{
  "name": "remote-subtitle-translator",
  "version": "1.0.0",
  "description": "Watch a video in full screen on your tv and get realtime subs on your phone. Translate those you don't understand and save your favorites for future study.",
  "main": "src/js/app.ts",
  "scripts": {
    "test": "we are live!",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "scss": "gulp scss",
    "html": "gulp html",
    "rollup": "rollup -c",
    "serve": "firebase serve",
    "build": "npm run tsc && npm run rollup",
    "buildall": "npm run build && npm run html && npm run scss",
    "start": "npm run buildall && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thdk/remote-subtitle-translator.git"
  },
  "author": "thdk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thdk/remote-subtitle-translator/issues"
  },
  "homepage": "https://github.com/thdk/remote-subtitle-translator#readme",
  "devDependencies": {
    "firebase": "^5.4.2",
    "gulp-sass": "^4.0.1",
    "rollup": "^0.65.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.3.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/jquery": "^3.3.6",
    "@types/pubsub-js": "^1.5.18",
    "firebase": "^5.4.1",
    "gulp": "^3.9.1",
    "gulp-typescript": "^4.0.2",
    "pubsub-js": "^1.6.1"
  }
